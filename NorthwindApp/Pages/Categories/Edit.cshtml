@page
@model NorthwindApp.Pages.Categories.EditModel

<form method="post" enctype="multipart/form-data">
    <div class="flex-container">
        <div class="form-group">
            <label class="btn btn-info">
                Replace picture
                <input class="hidden" type="file" asp-for="Upload" 
                       accept="@Model.AcceptedFiles" onchange="ShowElement('input-button')" />
            </label>
        </div>

        <div class="form-group" style="padding-left:10px">
            <input id="input-button" type="submit" value="Save" class="btn btn-success hidden" />
        </div>

        <div class="form-group flex-item-right">
            <a class="btn btn-dark" href="@Model.CategoryPictureHref">
                <i class="fa fa-download" aria-hidden="true"></i>
            </a>
            @Html.NorthwindCategoryImageLink(Model.Category.CategoryId, "Html helper link")
            <a northwind-id="@Model.Category.CategoryId">Tag helper link</a>
        </div>
    </div>

    <h3>@Model.Category.CategoryName</h3>

    <div>
        <p>Current image</p>
        @Html.GetImage(Model.Category.Picture)
    </div>
</form>